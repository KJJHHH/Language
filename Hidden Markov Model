        "gt_tags = []\n",
        "for word in label_str.split():\n",
        "    a_tag = hmmHandler.get_tags(word)\n",
        "    #print(a_tag)\n",
        "    gt_tags.extend(a_tag)\n",
        "\n",
        "#gt_tags = hmmHandler.get_tags(label_str)\n",
        "print(gt_tags)\n",
        "\n",
        "#test_str = '哈囉你好嗎衷心感謝珍重再見期待再相逢'\n",
        "#test_str = '我們愛你啦中華民國在台灣'\n",
        "#test_str = '吳怡潔在政大有塊地伊呀伊呀喲'\n",
